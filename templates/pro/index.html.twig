{% extends 'base.html.twig' %}

{% block title %}Pro index{% endblock %}

{% block body %}
    <h1>Pro index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uuid</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pro in pros %}
            <tr>
                <td>{{ pro.id }}</td>
                <td>{{ pro.uuid }}</td>
                <td>{{ pro.roles ? pro.roles|json_encode : '' }}</td>
                <td>{{ pro.password }}</td>
                <td>
                    <a href="{{ path('pro_show', {'id': pro.id,'uuid':pro.uuid}) }}">show</a>
                    <a href="{{ path('pro_edit', {'id': pro.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pro_new') }}">Create new</a>
{% endblock %}
