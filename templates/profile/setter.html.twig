{% extends 'base.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-md-4 p-3 p-md-0">
        <div class="col-12 col-sm-6 col-lg-4 col-xl-4 m-auto rounded bg-white text-center p-4 shadow-sm">
            <h5 class="h5 font-weight-normal text-dark">Premi√®re visite sur <span class="text-lobster ">StopContagion</span></h5>
            <h6 class="text-main font-weight-semibold small">Nous avons besoin de quelques informations pour mieux vous accompagner..</h6>
            <hr>
            {{ form_start(form) }}
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-transparent" id="basic-addon1"><i class="fas fa-user"></i></span>
                </div>
                {{ form_widget(form.username) }}
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-transparent" id="basic-addon2"><i class="fas fa-envelope"></i></span>
                </div>
                {{ form_widget(form.email,{'attr':{'class':'border-left-0'}}) }}
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-transparent" id="basic-addon3"><i class="fas fa-user"></i></span>
                </div>
                {{ form_widget(form.firstname,{'attr':{'class':'border-left-0'}}) }}
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-transparent" id="basic-addon4"><i class="fas fa-user"></i></span>
                </div>
                {{ form_widget(form.lastname,{'attr':{'class':'border-left-0'}}) }}
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-transparent" id="basic-addon5"><i class="fas fa-notes-medical"></i></span>
                </div>
                {{ form_widget(form.insee,{'attr':{'class':'border-left-0'}}) }}
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-transparent" id="basic-addon5"><i class="fas fa-notes-medical"></i></span>
                </div>
                {{ form_widget(form.mutuelle,{'attr':{'class':'border-left-0'}}) }}
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-transparent" id="basic-addon6"><i class="fas fa-map-marker-alt"></i></span>
                </div>
                {{ form_widget(form.address,{'attr':{'class':'border-left-0'}}) }}
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-transparent" id="basic-addon7"><i class="fas fa-city"></i></span>
                </div>
                {{ form_widget(form.city,{'attr':{'class':'border-left-0'}}) }}
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-transparent" id="basic-addon8"><i class="fas fa-envelope"></i></span>
                </div>
                {{ form_widget(form.zipcode,{'attr':{'class':'border-left-0'}}) }}
            </div>
            <button class="mt-3 btn btn-outline-success font-weight-semibold"><i class="fas fa-paper-plane"></i> Envoyer</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
